<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvScanTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan Items"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvScanSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add items by scanning barcodes or receipts"
            android:textSize="14sp"
            android:textColor="#808080"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal" />


        <!-- Scan Frame Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#E5F4EC"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:clipToOutline="true"
            android:backgroundTint="#E5F4EC">

            <ImageView
                android:id="@+id/imgScanFrame"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_scan_frame"
                app:tint="#4CAF50"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tvFrameHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position barcode within frame"
                android:textColor="#717171"
                android:layout_marginTop="12dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <!-- Scan Barcode -->
            <LinearLayout
                android:id="@+id/btnScanBarcode"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_card"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_barcode"
                    app:tint="#4CAF50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Barcode"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Scan Receipt -->
            <LinearLayout
                android:id="@+id/btnScanReceipt"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_card"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_recipes"
                    app:tint="#4CAF50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan Receipt"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- From Gallery -->
            <LinearLayout
                android:id="@+id/btnFromGallery"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_card"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_gallery"
                    app:tint="#4CAF50" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From Gallery"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Quick Tips Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F7F3"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="25dp"
            android:backgroundTint="#F2F7F3"
            android:clipToOutline="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Tips"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Hold your phone steady and ensure good lighting"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Scan receipts for automatic bulk entry"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Manual entry available if scan fails"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnManualEntry"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Manual Entry"
            android:textSize="13sp"
            android:backgroundTint="#DDDDDD"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"/>

        <!-- Start Scanning Button -->
        <Button
            android:id="@+id/btnStartScanning"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Start Scanning"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</ScrollView>
